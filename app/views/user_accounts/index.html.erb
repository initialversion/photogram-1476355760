<div class="page-header">
  <h1>
    User accounts
    <a href="/user_accounts/new" class="btn btn-lg btn-success">New User account</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Username</th>
        <th>Avatar</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @user_accounts.each do |user_account| %>
      <tr>
        <td><%= user_account.username %></td>
        <td><img src='<%= user_account.avatar %>' class='img-responsive'></td>
        <td><%= user_account.email %></td>
        <td><%= user_account.password %></td>
        <td>
          <a href="/user_accounts/<%= user_account.id %>" class="btn btn-primary">Show</a>
          <a href="/user_accounts/<%= user_account.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_account/<%= user_account.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
